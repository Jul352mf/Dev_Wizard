{
  "compilerOptions": {
    "target": "ES2020",
  "module": "Node16",
    "lib": ["ES2020"],
  "outDir": "../dist",
    "rootDir": "..",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "types": ["node"]
  },
  "include": [
    "../api/**/*.ts",
    "../lib/config/loadFeatureFlags.ts"
  ],
  "exclude": ["node_modules"]
}
