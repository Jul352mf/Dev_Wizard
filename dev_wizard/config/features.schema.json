{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dev Wizard Feature Flags",
  "type": "object",
  "required": ["features", "environment", "version"],
  "properties": {
    "features": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object",
          "required": ["enabled", "description"],
            "properties": {
              "enabled": { "type": "boolean" },
              "description": { "type": "string" }
            },
            "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "environment": { "type": "string" },
    "version": { "type": "string" }
  },
  "additionalProperties": false
}
